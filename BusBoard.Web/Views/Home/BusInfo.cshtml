@model BusBoard.Web.ViewModels.BusInfo
@{
  ViewBag.Title = "Bus Information";
}

<h2>BusInfo</h2>

<div class="row">
    <p>You entered postcode @Model.PostCode</p>
    @for (var i = 0; i < Model.Stops.Count; i++)
    {
    <p>Next buses at: @Model.Stops[i].commonName @Model.Stops[i].indicator</p>
        foreach (var busPrediction in Model.Stops[i].NextBuses)
        {
            <p>@busPrediction.ToString()</p>
        }
    }
</div>
